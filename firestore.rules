rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow read/write for testing (DEV only)
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

